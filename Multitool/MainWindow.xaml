<Window x:Class="MultiTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:multitool="clr-namespace:MultiTool"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MultiTool"
        Name="MultiToolMainWindow"
        Closed="MultiToolMainWindow_Closed"
        MinHeight="395" 
        MinWidth="555" 
        Style="{StaticResource DarkWindow}">
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>

            <Setter Property="Height" Value="120"/>
            <Setter Property="MaxHeight" Value="150"/>

            <Setter Property="Width" Value="120"/>
            <Setter Property="MaxWidth" Value="150"/>
        </Style>
        <Style TargetType="{x:Type Image}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <!--Window custom chrome-->
        <multitool:MultiToolWindowChrome
            x:Name="Chrome"
            MouseDown="Grid_MouseDown"
            CloseClick="WindowCloseButton_Click"
            MinimizeClick="WindowMinimizeButton_Click"
            Title="MultiTool"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>

            <Button 
                x:Name="OpenDownload" 
                Margin="10,50" 
                Background="Transparent" 
                Click="OpenDownload_Click" 
                Grid.Row="0" 
                Grid.Column="0" 
                Template="{StaticResource IconButtonControlTemplate}">
                <Image 
                    Source="Images/download_ico.png" 
                    RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>

            <Button 
                x:Name="OpenExplorer" 
                Grid.Column="1" 
                Grid.Row="0" 
                Margin="10,50" 
                Click="OpenExplorer_Click" 
                Template="{StaticResource IconButtonControlTemplate}">
                <Image 
                    Source="Images/explorer_ico.png" 
                    RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>

            <Button 
                x:Name="OpenPowerSettings" 
                Grid.Column="2" 
                Grid.Row="0" 
                Margin="10,50" 
                Click="OpenPowerSettings_Click" 
                Template="{StaticResource IconButtonControlTemplate}">
                <Image 
                    Source="Images/power_ico.png" 
                    RenderOptions.BitmapScalingMode="HighQuality" />
            </Button>

            <Button 
                x:Name="OpenSoon" 
                ToolTip="Travel to GitHub (with ❤)"
                Foreground="White" 
                Click="OpenSoon_Click" 
                Template="{StaticResource IconButtonControlTemplate}" 
                Grid.Column="1" 
                Grid.Row="1">
                <TextBlock x:Name="ComingSoonText" 
                           FontSize="19" 
                           TextAlignment="Center">
                           COMING <LineBreak/>
                           SOON
                </TextBlock>
            </Button>

            <TextBlock
                x:Name="VersionTextBlock"
                Text="{Binding Path=AppVersion, Mode=OneTime}"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Grid.Column="2"
                Grid.Row="3"/>
            <TextBlock
                x:Name="LeftPosition"
                Text="{Binding Path=Left, Mode=OneWay}"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Grid.Column="1"
                Grid.Row="3"/>
            <TextBlock
                x:Name="TopPosition"
                Text="{Binding Path=Top, Mode=OneWay}"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Grid.Column="0"
                Grid.Row="3"/>

            <Grid.Triggers>
                <EventTrigger RoutedEvent="Button.MouseEnter" SourceName="OpenPowerSettings">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                            Storyboard.TargetName="OpenPowerSettings"
                            Storyboard.TargetProperty="Width"
                            To="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}}, Path=MaxWidth}" By="100" Duration="0:0:0.2"
                            AutoReverse="False"/>
                            <DoubleAnimation
                            Storyboard.TargetName="OpenPowerSettings"
                            Storyboard.TargetProperty="Height"
                            To="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}}, Path=MaxHeight}" By="100" Duration="0:0:0.2"
                            AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Button.MouseLeave" SourceName="OpenPowerSettings">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                            Storyboard.TargetName="OpenPowerSettings"
                            Storyboard.TargetProperty="Width"
                            To="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}}, Path=Width}"
                            Duration="0:0:0.2"
                            AutoReverse="False"/>
                            <DoubleAnimation
                            Storyboard.TargetName="OpenPowerSettings"
                            Storyboard.TargetProperty="Height" 
                            To="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}}, Path=Height}" 
                            Duration="0:0:0.2"
                            AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>

                <EventTrigger RoutedEvent="Button.MouseEnter" SourceName="OpenExplorer">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                            Storyboard.TargetName="OpenExplorer"
                            Storyboard.TargetProperty="Width"
                            To="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}}, Path=MaxWidth}" By="100" Duration="0:0:0.2"
                            AutoReverse="False"/>
                            <DoubleAnimation
                            Storyboard.TargetName="OpenExplorer"
                            Storyboard.TargetProperty="Height"
                            To="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}}, Path=MaxHeight}" By="100" Duration="0:0:0.2"
                            AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Button.MouseLeave" SourceName="OpenExplorer">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                            Storyboard.TargetName="OpenExplorer"
                            Storyboard.TargetProperty="Width"
                            To="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}}, Path=Width}"
                            Duration="0:0:0.2"
                            AutoReverse="False"/>
                            <DoubleAnimation
                            Storyboard.TargetName="OpenExplorer"
                            Storyboard.TargetProperty="Height" 
                            To="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}}, Path=Height}" 
                            Duration="0:0:0.2"
                            AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>

                <EventTrigger RoutedEvent="Button.MouseEnter" SourceName="OpenDownload">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                            Storyboard.TargetName="OpenDownload"
                            Storyboard.TargetProperty="Width"
                            To="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}}, Path=MaxWidth}" By="100" Duration="0:0:0.2"
                            AutoReverse="False"/>
                            <DoubleAnimation
                            Storyboard.TargetName="OpenDownload"
                            Storyboard.TargetProperty="Height"
                            To="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}}, Path=MaxHeight}" By="100" Duration="0:0:0.2"
                            AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Button.MouseLeave" SourceName="OpenDownload">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                            Storyboard.TargetName="OpenDownload"
                            Storyboard.TargetProperty="Width"
                            To="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}}, Path=Width}"
                            Duration="0:0:0.2"
                            AutoReverse="False"/>
                            <DoubleAnimation
                            Storyboard.TargetName="OpenDownload"
                            Storyboard.TargetProperty="Height" 
                            To="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}}, Path=Height}" 
                            Duration="0:0:0.2"
                            AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>

                <EventTrigger RoutedEvent="Button.MouseEnter" SourceName="OpenSoon">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                            Storyboard.TargetName="ComingSoonText"
                            Storyboard.TargetProperty="FontSize"
                            To="23" By="200" Duration="0:0:0.2"
                            AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Button.MouseLeave" SourceName="OpenSoon">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                            Storyboard.TargetName="ComingSoonText"
                            Storyboard.TargetProperty="FontSize"
                            To="19"
                            Duration="0:0:0.2"
                            AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
        </Grid>

    </Grid>
</Window>
