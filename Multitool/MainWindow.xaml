                            Template="{StaticResource IconButtonControlTemplate}"/>

                    <Grid.Triggers>
                        <EventTrigger RoutedEvent="Button.MouseEnter" SourceName="SoundCP_Button">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="SoundCP_Button"
                                                     Storyboard.TargetProperty="FontSize"
                                                     To="110" By="200" Duration="0:0:0.2"
                                                     AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="SoundCP_Button"
                                                     Storyboard.TargetProperty="Height"
                                                     To="115" By="200" Duration="0:0:0.2"
                                                     AutoReverse="False"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
