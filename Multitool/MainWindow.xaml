                                            AutoReverse="False"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Grid.Triggers>
                    -->
                    </Grid>
                </TabItem>
            </TabControl>

        </Grid>
    </Border>
</Window>
